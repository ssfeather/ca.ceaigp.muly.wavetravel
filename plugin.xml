<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ca.ceaigp.muly.travel.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="ca.ceaigp.muly.travel.Perspective"
            id="ca.ceaigp.muly.travel.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="MasterCurveView"
            class="ca.ceaigp.muly.travel.MasterCurveView"
            id="ca.ceaigp.muly.travel.MasterCurveView">
      </view>
      <view
            class="ca.ceaigp.muly.travel.SlaveCurveView"
            id="ca.ceaigp.muly.travel.SlaveCurveView"
            name="SlaveCurveView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="ca.ceaigp.muly.travel.MasterCurveView"
               minimized="false"
               ratio="0.7f"
               relationship="top"
               relative="org.eclipse.ui.editorss"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="false"
               id="ca.ceaigp.muly.travel.SlaveCurveView"
               minimized="true"
               moveable="false"
               ratio="0.3f"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="ca.ceaigp.muly.travel.application"
            name="动态多深度走时曲线图">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>

</plugin>
